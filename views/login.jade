extends layout

block content
    div.container
        div.panel.panel-default
            div.panel-heading Login
            div.panel-body
                form(role='form')
                    div.form-group
                        label(for='username') Username:
                        input(type='text', class='form-control', id='username', placeholder='Username')
                    div.form-group
                        label(for='password') Password:
                        input(type='password', class='form-control', id='password', placeholder='Password')
            div.panel-footer
                div.clearfix
                    button(type='submit', class='btn btn-default pull-left') Login
                    button(type='button', class='btn btn-default pull-right') Register